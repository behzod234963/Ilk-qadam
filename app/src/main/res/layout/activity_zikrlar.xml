<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ZikrlarActivity">

    <com.google.android.material.appbar.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#23003D">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView

                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zikrlar sanog'i"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:paddingRight="20dp"/>


                <LinearLayout
                    android:id="@+id/ll_Mode"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_click"
                    android:gravity="center"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/tv_Mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="33"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
                </LinearLayout>

                <ImageButton

                    android:background="@drawable/bg_click"
                    android:id="@+id/ib_reset"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/reset_process"/>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/pic_background">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout

                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/status_circle"
                    android:gravity="center">

                    <TextView

                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 | 33"
                        android:textColor="@color/white"
                        android:textSize="28sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|top">

            <Button

                android:id="@+id/b_click"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/bg_click"
                app:backgroundTint="@null"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="70sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>