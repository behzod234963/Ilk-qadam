<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pic"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center"
    android:padding="10dp">
    <ImageButton
        android:id="@+id/b_main_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pic_settings"
        android:layout_gravity="top|end"
        android:background="@drawable/bg_click"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/b_namozSoatlari_Main"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_b_main"
            android:text="Namoz vaqtlari"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:fontFamily="@font/main_buttons_script"
            app:backgroundTint="@null"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/b_main_zikrlar"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_b_main"
            android:text="Zikrlar sanog'i"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/main_buttons_script"
            app:backgroundTint="@null"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/b_Namoz_Main"
            android:layout_width="250dp"
            android:layout_height="60dp"
            app:backgroundTint="@null"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_b_main"
            android:text="Namoz o'qish tartibi"
            android:textSize="19sp"
            android:fontFamily="@font/main_buttons_script"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>