<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_background">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/b_main_settings"
                android:layout_width="70dp"
                android:layout_marginTop="7dp"
                android:layout_height="match_parent"
                android:src="@drawable/pic_settings"
                android:background="@drawable/click_circle"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/main_background_mosque_2"
        android:orientation="vertical"
        android:gravity="center|bottom"
        android:paddingHorizontal="200dp">

        <Button
            android:id="@+id/b_main_zikrlar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/main_buttons_background"
            android:text="Zikrlar sanog'i"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="@font/main_buttons_script"
            app:backgroundTint="@null"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/b_main_namozVaqtlari"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:backgroundTint="@null"
            android:textColor="@color/white"
            android:background="@drawable/main_buttons_background"
            android:text="Namoz soatlari"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="@font/main_buttons_script"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:background="@drawable/mainbackgroundmosque"
        android:gravity="center|bottom"
        android:paddingHorizontal="200dp">

        <Button

            android:id="@+id/b_main_namozOqish"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:backgroundTint="@null"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:background="@drawable/main_buttons_background"
            android:text="Namoz o'qish tartibi"
            android:textSize="30sp"
            android:fontFamily="@font/main_buttons_script"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>